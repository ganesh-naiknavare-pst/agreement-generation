generator db {
provider = "prisma-client-py"
interface = "asyncio"
recursive_type_depth = 5
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Agreement {
  id        Int      @id @default(autoincrement())
  tenantId  Int
  ownerId   Int
  startDate DateTime
  endDate   DateTime
  createdAt DateTime @default(now())
  Owner     Owner    @relation(fields: [ownerId], references: [id])
  Tenant    Tenant   @relation(fields: [tenantId], references: [id])
}

model Owner {
  id        Int         @id @default(autoincrement())
  name      String
  email     String      @unique
  phone     String
  createdAt DateTime    @default(now())
  Agreement Agreement[]
}

model Tenant {
  id        Int         @id @default(autoincrement())
  name      String
  email     String      @unique
  phone     String
  createdAt DateTime    @default(now())
  Agreement Agreement[]
}
