generator db {
provider = "prisma-client-py"
interface = "asyncio"
recursive_type_depth = 5
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Agreement {
  id        Int             @id @default(autoincrement())
  createdAt DateTime        @default(now())
  status    AgreementStatus @default(PROCESSING)
  pdf       Bytes?
  address   String
  city      String
  startDate DateTime
  owner     Owner[]
  tenants   Tenant[]
}

model Owner {
  id            Int         @id @default(autoincrement())
  agreementId   Int
  name          String
  email         String
  createdAt     DateTime    @default(now())
  agreement     Agreement   @relation(fields: [agreementId], references: [id])
}

model Tenant {
  id            Int         @id @default(autoincrement())
  agreementId   Int
  name          String
  email         String
  createdAt     DateTime    @default(now())
  agreement     Agreement   @relation(fields: [agreementId], references: [id])
}

enum AgreementStatus {
  APPROVED
  PROCESSING
  REJECTED
}
